<odoo>
  <data>

        <record id="daily_tree" model="ir.ui.view">
            <field name="name">daily_tree</field>
            <field name="model">daily.ops</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="vessel_id"/>
                    <field name="report_date"/>
                    <field name="status"/>
                    <field name="captain_id"/>
                    <field name="approved_by"/>
                    <field name="prepared_by"/>
                    <field name="stage" string="Sign"/>
                </tree>
            </field>
        </record>

        <record id="daily_form" model="ir.ui.view">
            <field name="name">daily_form</field>
            <field name="model">daily.ops</field>
            <field name="arch" type="xml">
                <form string="Daily Ops">
                    <header>
                        <button name="button_approved" string="Approved" groups="inherit_digital_vessel.svp_dv,inherit_digital_vessel.admin_dv" type="object" class="oe_highlight" attrs="{'invisible': [('stage', 'in', ('Reject', 'Approved'))]}" />
                        <button name="button_reject" string="Reject" groups="inherit_digital_vessel.svp_dv,inherit_digital_vessel.admin_dv" type="object" class="oe_highlight" attrs="{'invisible': [('stage', 'in', ('Reject', 'Approved'))]}"/>
                        <field name="stage" widget="statusbar" statusbar_visible="Waiting,Approved,Reject"/>
                    </header>
                    <sheet>
                    	<div class="oe_title">
                            <span class="o_form_label" >Daily Ops Number</span>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                        	<group>
                            	<field name="report_date"/>
                                <field name="vessel_id"/>
                            	<field name="captain_id"/>
                            	<field name="prepared_by"/>
                            	<field name="approved_by"/>
                                <field name="x_css" invisible="1"/>


                            </group>

                            <group>
                                <field name="working_area_id"/>
                                <field name="location_id"/>
                                <field name="cuaca"/>
                            	<field name="status"/>
                                
                            </group>
                        </group>

                        <group>
                            <group string="Operation Running Time (Hrs)">
                                <field name="op_start" widget="float_time"/>
                                <field name="op_finish" widget="float_time"/>
                                <field name="stop_op" widget="float_time"/>
                                <field name="total_op" widget="float_time"/>
                            </group>

                            <group string="Bahan bakar (L)">
                                <field name="rob_awal" />
                                <field name="rob_pemakaian" />
                                <field name="rob_akhir" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook colspan="4">
                            <page name="vessel_activity" string="Vessel Activity">
                            	<group>
                                    <field name="vessel_activity_line_ids">
                                        <tree editable="bottom" string="Vessel Activity" create="1">
                                            <field name="time"/>
                                            <field name="activity"/>
                                        </tree>
                                    </field>
                                </group>  
                            </page>
                        </notebook>
                        <group>
                            <field name="note" />
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_daily_ops" model="ir.actions.act_window">
            <field name="name">Daily Ops</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">daily.ops</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_daily_ops" name="Daily Ops" parent="digital_vessel.menu_digital_vessel" sequence="2" action="action_daily_ops"/>
    </data>
</odoo>