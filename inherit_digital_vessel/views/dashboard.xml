<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="list_status_kapal_pivot" model="ir.ui.view">
            <field name="name">dashboard.vessel.pivot</field>
            <field name="model">dashboard.vessel</field>
            <field name="arch" type="xml">
                <pivot string="Status Kapal">
                    <field name="date" interval="month" type="row"/>
                    <field name="status" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="act_list_status_kapal_pivot" model="ir.actions.act_window">
            <field name="name">Status Kapal</field>
            <field name="res_model">dashboard.vessel</field>
            <field name="view_mode">pivot</field>
            <field name="view_id" ref="list_status_kapal_pivot"/>
        </record>

        <record id="list_status_kapal_pie" model="ir.ui.view">
            <field name="name">dashboard.vessel.pie</field>
            <field name="model">dashboard.vessel</field>
            <field name="arch" type="xml">
                <graph type="pie" string="Status Kapal">
                    <field name="status"/>
                </graph>
            </field>
        </record>

        <record id="act_list_status_kapal_pie" model="ir.actions.act_window">
            <field name="name">Status Kapal</field>
            <field name="res_model">dashboard.vessel</field>
            <field name="view_mode">graph</field>
            <field name="view_id" ref="list_status_kapal_pie"/>
        </record>

        <record id="list_status_kapal_tree" model="ir.ui.view">
            <field name="name">dashboard.vessel.tree</field>
            <field name="model">dashboard.vessel</field>
            <field name="arch" type="xml">
                <tree string="Status Kapal">
                    <field name="vessel_id"/>
                    <field name="status"/>
                    <field name="date" widget="date"/>
                </tree>
            </field>
        </record>

        <record id="act_list_status_kapal_tree" model="ir.actions.act_window">
            <field name="name">Status Kapal</field>
            <field name="res_model">dashboard.vessel</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="list_status_kapal_tree"/>
        </record>

        <record id="dashboard_form_view" model="ir.ui.view">
            <field name="name">Dashboard Form</field>
            <field name="model">board.board</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Dashboard">
                    <board style="1-2">
                        <column>
                            <action
                                    string="Data Status Kapal"
                                    name="%(inherit_digital_vessel.act_list_status_kapal_pivot)d"/>
                            <action
                                    string="Tabel Status Kapal"
                                    name="%(inherit_digital_vessel.act_list_status_kapal_tree)d"/>
                        </column>
                        <column>
                            <action
                                    string="Status Kapal"
                                    name="%(inherit_digital_vessel.act_list_status_kapal_pie)d"/>
                        </column>
                    </board>
                </form>
            </field>
        </record>

        <record id="kapal_dashboard" model="ir.actions.act_window">
            <field name="name">Dashboard</field>
            <field name="res_model">board.board</field>
            <field name="view_mode">form</field>
            <field name="usage">menu</field>
            <field name="view_id" ref="dashboard_form_view"/>
        </record>

        <menuitem
                name="Dashboard"
                parent="digital_vessel.menu_digital_vessel"
                action="kapal_dashboard"
                sequence="1"
                id="menu_dashboard"/>

    </data>
</odoo>